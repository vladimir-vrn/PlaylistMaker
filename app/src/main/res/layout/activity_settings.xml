<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/standard_indentation"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/standard_indentation">

        <ImageView
            android:id="@+id/img_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/standard_indentation"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/standard_indentation"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/btn_settings"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/heading_text_size" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_indentation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/standard_indentation"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/txt_dark_theme"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/other_text_size" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_size_switch"
            android:minHeight="@dimen/min_size_switch"
            android:layout_gravity="end"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard_indentation"
        android:paddingBottom="@dimen/standard_indentation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/txt_share_app"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/other_text_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:minWidth="@dimen/min_size_ico"
            android:minHeight="@dimen/min_size_ico"
            android:scaleType="center"
            android:src="@drawable/ic_share"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard_indentation"
        android:paddingBottom="@dimen/standard_indentation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/txt_write_to_support"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/other_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:minWidth="@dimen/min_size_ico"
            android:minHeight="@dimen/min_size_ico"
            android:scaleType="center"
            android:src="@drawable/ic_support" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard_indentation"
        android:paddingBottom="@dimen/standard_indentation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/txt_user_agreement"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/other_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:minWidth="@dimen/min_size_ico"
            android:minHeight="@dimen/min_size_ico"
            android:scaleType="center"
            android:src="@drawable/ic_symbol_more"/>


    </FrameLayout>

</LinearLayout>