<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/MainToolbar"
        android:id="@+id/tb_main"
        app:navigationIcon="@null"
        app:title="@string/app_name" />

    <Button
        style="@style/MainButton"
        android:id="@+id/btn_search"
        android:layout_marginTop="@dimen/big_indentation"
        android:text="@string/search"
        app:icon="@drawable/ic_find" />

    <Button
        style="@style/MainButton"
        android:id="@+id/btn_media_library"
        android:text="@string/media_library"
        app:icon="@drawable/ic_media_library" />

    <Button
        style="@style/MainButton"
        android:id="@+id/btn_settings"
        android:layout_marginBottom="@dimen/big_indentation"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings" />

</LinearLayout>