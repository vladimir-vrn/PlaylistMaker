<resources>
    <style name="MainLayout">
        <item name="android:background">@color/yp_blue</item>
    </style>
    <style name="HeaderText">
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextAppearance">@style/HeaderText</item>
        <item name="titleTextColor">@color/yp_black</item>
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="navigationIcon">@drawable/ic_left_arrow</item>
        <item name="navigationIconTint">@color/yp_black</item>
    </style>
    <style name="MainToolbar" parent="Toolbar">
        <item name="titleTextColor">@color/yp_white</item>
    </style>
    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/standard_indentation</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_marginLeft">@dimen/standard_indentation</item>
        <item name="android:layout_marginRight">@dimen/standard_indentation</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="SettingsToolbar" parent="Toolbar">
    </style>
    <style name="SettingsItemGeneral">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="drawableTint">@color/yp_text_gray</item>
        <item name="android:paddingHorizontal">@dimen/standard_indentation</item>
        <item name="android:paddingVertical">@dimen/settings_item_vertical_indentation</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/other_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsItem" parent="SettingsItemGeneral">
    </style>
    <style name="SearchToolbar" parent="Toolbar">
    </style>
    <style name="SearchColor">
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>
    <style name="MediaLibraryToolbar" parent="Toolbar">
    </style>
    <style name="TrackColorGeneral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitXY</item>
        <item name="tint">@color/yp_text_gray</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TrackColor" parent="TrackColorGeneral">
    </style>
    <style name="TrackColorImage" parent="TrackColorGeneral">
        <item name="android:layout_width">@dimen/track_image_size</item>
        <item name="android:layout_height">@dimen/track_image_size</item>
    </style>
    <style name="TrackColorName" parent="TrackColorGeneral">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/other_text_size</item>
    </style>
    <style name="BtnPlaceholderGeneral" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/big_indentation</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/btn_small_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/btn_big_corner_radius</item>
    </style>
    <style name="BtnPlaceholder" parent="BtnPlaceholderGeneral">
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>
    <style name="TxtPlaceholderGeneral">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standard_indentation</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TxtPlaceholder" parent="TxtPlaceholderGeneral">
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="ImgPlaceholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="LinearLayoutPlaceholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>